<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BooksTab.DaysBookFragment"
    android:orientation="vertical"
    android:background="@color/amguBlue_background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/amguBlue"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/daysBook_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="#00FFFFFF"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:visibility="visible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Журнал по дням"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/daysBook_groupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#16000000"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:padding="8dp"
        android:text="группа"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/daysBook_lastDay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="@color/amguBlue_light"
            android:scaleX="2"
            android:scaleY="2"
            android:background="#00FFFFFF"
            android:src="@drawable/baseline_arrow_circle_left_24" />

        <Button
            android:id="@+id/daysBook_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/amguBlue_light"
            android:layout_margin="4dp"
            android:text="00.00.0000\nПн"
            android:paddingVertical="4dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/daysBook_nextDay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="@color/amguBlue_light"
            android:scaleX="2"
            android:scaleY="2"
            android:background="#00FFFFFF"
            android:src="@drawable/baseline_arrow_circle_right_24" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/daysBook_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>